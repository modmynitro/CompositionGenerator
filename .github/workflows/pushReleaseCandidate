name: .NET publish RELEASE

on:
  push:
    tags:
      - '[0-9]+.[0-9]+.[0-9]+-*'
    
jobs:
  build:

    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3
      - name: Setup .NET
        uses: actions/setup-dotnet@v4
        with:
          dotnet-version: 8.0.x
      - name: Set VERSION variable from tag
        run: echo "VERSION=${GITHUB_REF/refs\/tags\/v/}" >> $GITHUB_ENV
      - name: Restore dependencies
        run: dotnet restore
      - name: Build
        run: dotnet build --no-restore --configuration Release /property:Version=${VERSION}
      - name: Test
        run: dotnet test --no-build --verbosity normal
      - name: Push Nuget
        run: nuget push YourPackage.nupkg -Source https://api.nuget.org/v3/index.json --api-key ${{ secrets.NUGET_API_KEY }}
